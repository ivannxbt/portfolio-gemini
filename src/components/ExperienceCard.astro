---
interface Props {
  company: string;
  role: string;
  location: string;
  period: string;
  tasks: string[];
}

const { company, role, location, period, tasks } = Astro.props;
---

<div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mb-8 card-hover-effect">
    <h3 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{company}</h3>
    <h4 class="text-xl font-semibold text-gray-700 dark:text-gray-300">{role}</h4>
    <p class="text-gray-500 dark:text-gray-400">{location} Â· {period}</p>
    <ul class="list-disc list-inside mt-4 text-gray-700 dark:text-gray-400">
        {tasks.map(task => (
            <li>{task}</li>
        ))}
    </ul>
</div>
