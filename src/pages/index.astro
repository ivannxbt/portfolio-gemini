---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout title="AI Engineer">
  <main class="container mx-auto px-4">
    <section class="text-center py-20">
      <h1 class="text-5xl font-bold text-white">AI Engineer</h1>
      <div class="mt-8">
        <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="bg-gray-800 text-white font-bold py-2 px-4 rounded hover:bg-gray-700">GitHub</a>
        <a href="#" class="ml-4 bg-gray-800 text-white font-bold py-2 px-4 rounded hover:bg-gray-700">CV</a>
      </div>
    </section>

    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <ProjectCard
          title="Project 1"
          description="A brief description of project 1."
          tags={['Astro', 'Tailwind', 'JavaScript']}
          url="https://github.com"
        />
        <ProjectCard
          title="Project 2"
          description="A brief description of project 2."
          tags={['React', 'Node.js', 'Express']}
          url="https://github.com"
        />
        <ProjectCard
          title="Project 3"
          description="A brief description of project 3."
          tags={['Python', 'Django', 'PostgreSQL']}
          url="https://github.com"
        />
      </div>
    </section>

    <section class="py-20">
      <h2 class="text-3xl font-bold text-white mb-8">Skills</h2>
      <div class="flex flex-wrap">
        <span class="bg-gray-100 text-gray-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">Astro</span>
        <span class="bg-gray-100 text-gray-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">Tailwind CSS</span>
        <span class="bg-gray-100 text-gray-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">JavaScript</span>
        <span class="bg-gray-100 text-gray-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">React</span>
        <span class="bg-gray-100 text-gray-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">Node.js</span>
      </div>
    </section>
  </main>
</Layout>
